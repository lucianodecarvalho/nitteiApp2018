<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ldecarvalho.nittei2018">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AtividadeListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:versionCode="0"
            android:versionName="beta">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AtividadeDetailActivity"
            android:label="@string/title_atividade_detail"
            android:parentActivityName=".AtividadeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ldecarvalho.nittei2018.AtividadeListActivity" />
        </activity>

        <provider
            android:name=".NitteiContentProvider"
            android:authorities="com.example.ldecarvalho.nittei2018"
            android:enabled="true"
            android:exported="true"></provider>
    </application>

</manifest>